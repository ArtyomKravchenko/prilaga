<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/bg"
        >
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="Select the action and move application in background"
              android:textColor="#ffeee6e7"
              android:layout_marginTop="30dip"
              android:gravity="center_horizontal"
            />

    <ImageButton
            android:id="@+id/animalburp"
            android:src="@drawable/animalburp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginTop="50dip"

            />

    <ImageButton
            android:id="@+id/animalbunch"
            android:src="@drawable/animalbunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginTop="70dip"

            />
</LinearLayout>